{
  "extends": "stylelint-config-standard",
  "rules": {
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": [
          "global"
        ]
      }
    ],
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [ "mixin", "include" ]
      }
    ]
  },
  "ignoreFiles": [
    "./**/*.ts",
    "./**/*.tsx"
  ]
}